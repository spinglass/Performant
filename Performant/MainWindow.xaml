<Window x:Class="Performant.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525"
        Loaded="OnLoaded" Closed="OnClosed"
        >
    <StackPanel>
        <Grid Name="ConnectionStatus" Height="20" />
        <TextBlock Name="Distance" FontSize="48" FontFamily="Verdana" Padding="4" Text="{Binding WorkDistance}" />
        <TextBlock Name="Time" FontSize="48" FontFamily="Verdana" Padding="4" Text="{Binding WorkTime}" />
    </StackPanel>
</Window>
